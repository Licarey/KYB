<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f9f9f9"
    tools:context="kuangyibao.com.kuangyibao.LancherActivity">
    <include
        layout="@layout/view_common_title"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_e0e0e0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="19dp"
        android:background="@color/white">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="14dp"
            android:textColor="@color/color_616161"/>
        <EditText
            android:id="@+id/mEtLoginName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:hint="请输入昵称"
            android:textSize="14dp"
            android:textColor="@color/color_232323"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_e0e0e0"
        android:layout_marginLeft="15dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="公司名称"
            android:textSize="14dp"
            android:textColor="@color/color_616161"/>
        <EditText
            android:id="@+id/mEtCompany"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="请输入公司名称"
            android:textSize="14dp"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_e0e0e0"
        android:layout_marginLeft="15dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="14dp"
            android:textColor="@color/color_616161"/>
        <EditText
            android:id="@+id/mEtPwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="请输入密码"
            android:textSize="14dp"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_e0e0e0"
        android:layout_marginLeft="15dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="14dp"
            android:textColor="@color/color_616161"/>
        <EditText
            android:id="@+id/mEtRePwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:hint="确认密码"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_bfbfbf"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_bfbfbf"
        android:layout_marginTop="23dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="14dp"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/nan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:textSize="14dp"
            android:background="@drawable/radio_button_style"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/nv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="80dp"
            android:textSize="14dp"
            android:background="@drawable/radio_button_style"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_bfbfbf"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="23dp"
        android:background="@color/color_bfbfbf"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="14dp"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:textSize="16dp"
            android:src="@drawable/img_headportrait"/>
        <TextView
            android:id="@+id/mTvPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择上传"
            android:textSize="14dp"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_bfbfbf"/>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="确认"
        android:textSize="17dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/btn_gray2"/>
</LinearLayout>
