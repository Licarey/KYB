<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/view_common_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/mBtnSelect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@mipmap/btn_gray2"
            android:text="下一步"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"/>
        <ScrollView
            android:layout_above="@id/mBtnSelect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/mTvInfoDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您订阅的产品还有0天到期"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"
                    android:textColor="#ff0000"
                    android:drawableLeft="@drawable/img_prompt"
                    android:drawablePadding="3dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择订阅周期"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRvPaytype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:background="@color/white">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_bfbfbf"/>
                    <TextView
                        android:id="@+id/mTvInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingBottom="10dp">
                    <CheckBox
                        android:id="@+id/cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我已阅读并接受"
                        android:layout_marginLeft="15dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_pay_protical_style"
                        android:drawablePadding="5dp"/>
                    <TextView
                        android:id="@+id/mTvDis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《免责说明》"
                        android:textColor="@color/color_1f97fc"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_bfbfbf"/>

                <LinearLayout
                    android:id="@+id/mLLJifen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_bfbfbf"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="积分"/>
                        <TextView
                            android:id="@+id/tv_jifen_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="共100，可用20积分抵"
                            android:textSize="13dp"
                            android:layout_marginLeft="5dp"/>
                        <TextView
                            android:id="@+id/tv_qian_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥10"
                            android:textSize="13dp"
                            android:textColor="#ff0000"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/magreen"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/radio_normal"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_bfbfbf"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
