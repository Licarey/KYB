<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kuangyibao.com.kuangyibao.LancherActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_normal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_1f97fc"
            tools:context="kuangyibao.com.kuangyibao.LancherActivity">

            <ImageView
                android:id="@+id/mIvMessage"
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/btn_top_left_message" />

            <ImageView
                android:id="@+id/mTvTitle"
                android:layout_width="107dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@mipmap/icon" />
            <ImageView
                android:id="@+id/mIvMine"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/btn_top_right_info_pre" />

        </RelativeLayout>
    </FrameLayout>
    <kuangyibao.com.kuangyibao.view.CommonWebView
        android:id="@+id/mWV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
